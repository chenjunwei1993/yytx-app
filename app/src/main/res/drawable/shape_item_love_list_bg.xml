<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 灰色阴影 -->
    <item
        android:left="10dp"
        android:top="10dp">
        <shape>
            <solid android:color="#E3E3E3" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <!-- 白色前景 -->

    <item
        android:right="10dp"
        android:bottom="10dp">
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>
