<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/iv_cash_gift"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/tv_gift_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="14sp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/text_color"
        app:layout_constraintTop_toTopOf="@+id/iv_cash_gift"
        app:layout_constraintLeft_toRightOf="@+id/iv_cash_gift"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_gift_describe"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textSize="14sp"
        android:textColor="#4a4a4a"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cash_gift"
        app:layout_constraintLeft_toRightOf="@+id/iv_cash_gift"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_cash_gift"
        android:background="#ECECEC"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>