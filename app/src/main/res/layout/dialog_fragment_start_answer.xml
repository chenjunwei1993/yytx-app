<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_answer_tip"
        android:layout_width="165dp"
        android:layout_height="135dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_answer_tip"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_answer_tip"
            android:layout_width="49dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_people4" />

        <TextView
            android:id="@+id/tv_answer_tip"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="@string/answer_first_tip"
            android:textColor="#333"
            android:textSize="7sp" />
        
        <LinearLayout

            android:id="@+id/ll_answer_forest_tip"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_answer_reciver_forest"
            android:layout_width="80dp"
            android:layout_height="15dp"
            android:gravity="center">

            <ImageView
                android:src="@drawable/forest_coin"
                android:layout_width="6dp"
                android:layout_height="6dp"/>

            <TextView
                android:layout_marginLeft="3dp"
                android:textSize="7sp"
                android:textColor="@color/white"
                android:text="@string/receiver_one_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        
    </LinearLayout>


</RelativeLayout>