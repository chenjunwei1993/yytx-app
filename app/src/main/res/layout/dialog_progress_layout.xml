<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/progress_dialog_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dialog_progress_width"
        android:layout_height="@dimen/dialog_progress_height"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_progress_img"
            android:layout_width="@dimen/dialog_img_width"
            android:layout_height="@dimen/dialog_img_height"
            android:src="@drawable/loading" />
    </LinearLayout>
</LinearLayout>