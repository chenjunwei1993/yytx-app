<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.dyibing.myapp.view.CircleImageView
            android:id="@+id/circle_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/default_head"
            app:civ_border_width="2dp"
            app:civ_border_color="#05C2BE"
            android:layout_marginLeft="20dp" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/circle_avatar"
            android:layout_toEndOf="@+id/circle_avatar"
            android:layout_marginStart="10dp"
            android:textSize="@dimen/text_16_sp"
            android:textColor="@color/text_color"
            android:text="陈俊伟"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_forest_coin_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignBottom="@+id/circle_avatar"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/circle_avatar"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_16_sp"
            android:drawableStart="@drawable/forest_coin"
            android:drawablePadding="5dp" />

        <TextView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button3_bg"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="8dp"
            android:paddingEnd="20dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_16_sp"
            android:text="返回"
            android:drawableLeft="@drawable/ic_keyboard_arrow_left_black_24dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="20dp"
        android:background="#0664C0"
        android:layout_marginStart="20dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="40dp"
            android:background="@drawable/login_bg"
            android:layout_width="180dp"
            android:layout_height="180dp">

            <ImageView
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:id="@+id/iv_fragment"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:text="出售数量"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.dyibing.myapp.view.AmountView
                android:id="@+id/amount_view"
                android:layout_marginLeft="5dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_total_forest"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:text="回收总价：5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginLeft="4dp"
                android:src="@drawable/forest_coin"
                android:layout_width="12dp"
                android:layout_height="12dp"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/iv_forest_coin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/bg_forest_coin"/>


</LinearLayout>